{
  "include": ["js/**/*", "js/**/*.vue"],

  "exclude": [],

  "compilerOptions": {
    "baseUrl": ".",
    "target": "esnext",
    "module": "esnext",
    // this enables stricter inference for data properties on `this`
    "strict": true,
    "jsx": "preserve",
    "moduleResolution": "node",
    "isolatedModules": true,

    "types": ["vue/macros-global", "element-plus/global"],

    "paths": {
      "@/*": ["./js/*"]
    }
  }
}
