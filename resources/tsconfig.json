{
  "compilerOptions": {    
    "target": "esnext",
    "strict": true,
    "sourceMap": true,
    "module": "esnext",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "importHelpers": true,
    "esModuleInterop": true
  },
  "paths": {
    "@/*": [
      "js/*"
    ]
  },
  "include": ["./js/**/*"]
}