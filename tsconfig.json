{
  "extends": "./node_modules/adonis-preset-ts/tsconfig",
  "include": [
    "**/*"
  ],
  "exclude": [
    "node_modules",
    "build",
    "resources" // Resources folder have it's corresponding TS config
  ],
  "compilerOptions": {
    "strict": true,
    "strictPropertyInitialization": false,
    "outDir": "build",
    "rootDir": "./",
    "sourceMap": true,
    "paths": {
      "App/*": [
        "./app/*"
      ],
      "Config/*": [
        "./config/*"
      ],
      "Contracts/*": [
        "./contracts/*"
      ],
      "Database/*": [
        "./database/*"
      ]
    },
    "types": [
      "node",
      "@adonisjs/core",
      "@adonisjs/repl",
      "@adonisjs/lucid",
      "@adonisjs/view",
      "@adonisjs/session",
      "@adonisjs/shield",
      "@adonisjs/auth"
    ]
  }
}
